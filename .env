# DailyUse 共享基础配置
# =============================================================================
# 此文件包含所有环境共享的默认值
# 会被 .env.{NODE_ENV} 和 .env.local 覆盖
# =============================================================================

# 时区
TZ=Asia/Shanghai

# 默认端口
API_PORT=3000
API_HOST=0.0.0.0

# JWT 过期时间（默认值）
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Redis 默认配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# 文件上传限制（10MB）
UPLOAD_MAX_SIZE=10485760

# 功能开关默认值
ENABLE_DAILY_ANALYSIS=true
USE_PRIORITY_QUEUE_SCHEDULER=true
