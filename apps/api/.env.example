PORT=3888

# Prisma connection
# Supported providers: postgresql, mysql
DB_PROVIDER="postgresql"

# Neon PostgreSQL (Recommended for Development)
# Sign up: https://neon.tech
# Free tier: 0.5 GB storage, 10 GB data transfer/month
DATABASE_URL="postgresql://YOUR_USER:YOUR_PASSWORD@YOUR_HOST.neon.tech/YOUR_DATABASE?sslmode=require"

# Alternative: Local PostgreSQL
# DATABASE_URL="postgresql://USER:PASSWORD@localhost:5432/dailyuse?schema=public"

# Redis Cache (Optional - for performance optimization)
REDIS_HOST=localhost
REDIS_PORT=6384
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# CORS allowed origins (comma separated)
CORS_ORIGIN=http://localhost:5173,http://localhost:5174

# JWT secrets (CHANGE IN PRODUCTION!)
JWT_SECRET=your-secret-key-change-me
REFRESH_TOKEN_SECRET=your-refresh-secret-change-me

# AI Configuration
# OpenAI API Key (Required for AI features in Epic 2+)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here
AI_MODEL=gpt-4-turbo-preview
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2000
