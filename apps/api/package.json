{
  "name": "@dailyuse/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "// ========== Development ==========": "",
    "dev": "cross-env NODE_ENV=development tsup --watch --onSuccess=\"node dist/index.js\"",
    "dev:tsx": "cross-env NODE_ENV=development tsx watch ./src/index.ts",
    "start": "cross-env NODE_ENV=production node ./dist/index.js",
    "start:dev": "npm run dev",
    "// ========== Build ==========": "",
    "build": "tsup",
    "build:clean": "rm -rf dist && npm run build",
    "typecheck": "tsc --noEmit",
    "// ========== Prisma Database ==========": "",
    "prisma": "prisma",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:create": "prisma migrate dev --create-only",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:migrate:reset": "prisma migrate reset --force",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "prisma:format": "prisma format",
    "prisma:validate": "prisma validate",
    "prisma:reset": "prisma migrate reset --force && npm run prisma:seed",
    "db:push": "prisma db push",
    "db:pull": "prisma db pull",
    "db:seed": "npm run prisma:seed",
    "db:reset": "npm run prisma:reset",
    "// ========== Documentation ==========": "",
    "docs:export": "node src/scripts/export-api-docs.js",
    "docs:serve": "echo 'API 文档访问地址: http://localhost:3888/api-docs'",
    "// ========== Testing ==========": "",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "// ========== Code Quality ==========": "",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix"
  },
  "dependencies": {
    "@dailyuse/contracts": "workspace:*",
    "@dailyuse/domain-server": "workspace:*",
    "@dailyuse/utils": "workspace:*",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "diff-match-patch": "1.0.5",
    "express": "^4.21.2",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@nestjs/common": "10.0.0",
    "@nestjs/core": "10.0.0",
    "@prisma/client": "^6.17.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/diff-match-patch": "1.0.36",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.17.1",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "cross-env": "10.1.0",
    "prisma": "^6.17.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "supertest": "^7.1.4",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.8.3",
    "uuid": "^11.1.0",
    "vitest": "^3.2.4"
  }
}
