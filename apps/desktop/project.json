{
  "name": "desktop",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/desktop/src",
  "tags": ["scope:desktop", "type:app", "platform:electron"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{workspaceRoot}/apps/desktop/dist"],
      "defaultConfiguration": "production",
      "dependsOn": ["^build"],
      "options": {
        "outputPath": "apps/desktop/dist",
        "configFile": "apps/desktop/vite.config.ts"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "development",
      "dependsOn": ["^build"],
      "options": {
        "command": "vite",
        "cwd": "apps/desktop"
      },
      "configurations": {
        "development": {
          "command": "vite --mode development",
          "cwd": "apps/desktop"
        }
      }
    },
    "package": {
      "executor": "nx:run-commands",
      "options": {
        "command": "electron-builder --dir",
        "cwd": "apps/desktop"
      }
    },
    "dist": {
      "executor": "nx:run-commands",
      "options": {
        "command": "electron-builder",
        "cwd": "apps/desktop"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/desktop/**/*.{ts,tsx,js,jsx,vue}"]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/apps/desktop"
      }
    },
    "test:ipc": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/coverage/apps/desktop-ipc"],
      "options": {
        "command": "vitest run --config vitest.ipc.config.ts",
        "cwd": "apps/desktop"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "apps/desktop"
      }
    }
  }
}
