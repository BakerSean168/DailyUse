{
  "name": "@dailyuse/web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "// ========== Development ==========": "",
    "dev": "vite",
    "serve": "npm run dev",
    "start": "npm run dev",
    "// ========== Build ==========": "",
    "build": "vue-tsc && vite build",
    "build:clean": "rm -rf dist && npm run build",
    "preview": "vite preview",
    "typecheck": "vue-tsc --noEmit",
    "// ========== Testing ==========": "",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:dag": "jest src/modules/goal/presentation/components/dag/GoalDAGVisualization.spec.ts",
    "// ========== E2E Testing ==========": "",
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "playwright test --debug",
    "e2e:ui": "playwright test --ui",
    "e2e:report": "playwright show-report",
    "// ========== Performance ==========": "",
    "bench": "vitest bench --run --config vitest.bench.config.ts",
    "bench:watch": "vitest bench --config vitest.bench.config.ts",
    "// ========== Code Quality ==========": "",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx",
    "lint:fix": "eslint . --ext .vue,.js,.ts,.jsx,.tsx --fix"
  },
  "dependencies": {
    "@dailyuse/contracts": "workspace:*",
    "@dailyuse/domain-client": "workspace:*",
    "@dailyuse/ui": "workspace:*",
    "@dailyuse/utils": "workspace:*",
    "@mdi/font": "^7.4.47",
    "@tiptap/extension-image": "^3.6.6",
    "@tiptap/extension-link": "^3.6.6",
    "@tiptap/extension-placeholder": "^3.6.6",
    "@tiptap/starter-kit": "^3.6.6",
    "@tiptap/vue-3": "^3.6.6",
    "@vueuse/core": "14.0.0",
    "axios": "^1.9.0",
    "date-fns": "^4.1.0",
    "echarts": "^5.6.0",
    "html2canvas": "1.4.1",
    "jspdf": "3.0.3",
    "markdown-it": "^14.1.0",
    "marked": "^16.4.0",
    "monaco-editor": "^0.52.2",
    "monaco-editor-vue3": "^0.1.10",
    "pinia": "^3.0.3",
    "pinia-plugin-persistedstate": "^4.2.0",
    "uuid": "^11.1.0",
    "vue": "^3.4.21",
    "vue-echarts": "^7.0.3",
    "vue-i18n": "^10.0.4",
    "vue-router": "4",
    "vuetify": "^3.7.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/vue": "^8.1.0",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^22.17.1",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vue/test-utils": "^2.4.6",
    "happy-dom": "^18.0.1",
    "typescript": "^5.8.3",
    "vite": "^7.1.7",
    "vitest": "^3.2.4",
    "vue-tsc": "^2.1.10"
  }
}
