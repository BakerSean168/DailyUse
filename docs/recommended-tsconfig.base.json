{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@dailyuse/contracts": ["libs/contracts/src/index.ts"],
      "@dailyuse/domain": ["libs/domain/src/index.ts"],
      "@dailyuse/shared/ui": ["libs/shared/ui/src/index.ts"],
      "@dailyuse/shared/utils": ["libs/shared/utils/src/index.ts"],
      "@dailyuse/shared/config": ["libs/shared/config/src/index.ts"],
      "@dailyuse/shared/testing": ["libs/shared/testing/src/index.ts"],
      "@dailyuse/web/components": ["libs/web/components/src/index.ts"],
      "@dailyuse/web/services": ["libs/web/services/src/index.ts"],
      "@dailyuse/web/stores": ["libs/web/stores/src/index.ts"],
      "@dailyuse/api/middleware": ["libs/api/middleware/src/index.ts"],
      "@dailyuse/api/validation": ["libs/api/validation/src/index.ts"],
      "@dailyuse/api/auth": ["libs/api/auth/src/index.ts"],
      "@dailyuse/desktop/ipc": ["libs/desktop/ipc/src/index.ts"],
      "@dailyuse/desktop/native": ["libs/desktop/native/src/index.ts"],
      "@dailyuse/desktop/windows": ["libs/desktop/windows/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp", "dist"]
}
