{
  "name": "daily-use",
  "private": true,
  "author": {
    "name": "bakersean",
    "email": "lulouhao@stu.sicau.edu.cn"
  },
  "description": "DailyUse Monorepo",
  "version": "0.1.10",
  "type": "module",
  "scripts": {
    "dev": "nx serve desktop",
    "dev:desktop": "nx serve desktop",
    "dev:web": "nx serve web",
    "dev:api": "nx serve api",
    "build": "nx run-many --target=build --all",
    "build:desktop": "nx build desktop",
    "build:web": "nx build web",
    "build:api": "nx build api",
    "lint": "nx run-many --target=lint --all",
    "lint:fix": "nx run-many --target=lint --all --fix",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:nx": "nx run-many --target=test --all",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "graph": "nx graph",
    "affected:build": "nx affected --target=build",
    "affected:test": "nx affected --target=test",
    "affected:lint": "nx affected --target=lint",
    "clean": "nx reset",
    "install:all": "pnpm install"
  },
  "dependencies": {
    "@dailyuse/contracts": "workspace:*",
    "@dailyuse/domain-client": "workspace:*",
    "@dailyuse/domain-core": "workspace:*",
    "@dailyuse/domain-server": "workspace:*",
    "@dailyuse/ui": "workspace:*",
    "@dailyuse/utils": "workspace:*",
    "echarts": "^5.6.0",
    "node-schedule": "^2.1.1",
    "vue-echarts": "^7.0.3"
  },
  "devDependencies": {
    "@nx/eslint": "^21.4.1",
    "@nx/js": "^21.4.1",
    "@nx/vite": "^21.4.1",
    "@nx/web": "^21.4.1",
    "@nx/workspace": "^21.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/vue": "^8.1.0",
    "@types/node-schedule": "^2.1.8",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.0.0",
    "eslint-plugin-vue": "^9.33.0",
    "globals": "^16.3.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "nx": "^21.4.1",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  }
}
