{
  "name": "daily-use",
  "private": true,
  "author": {
    "name": "bakersean",
    "email": "lulouhao@stu.sicau.edu.cn"
  },
  "description": "DailyUse Monorepo - Full-stack productivity suite built with Vue 3, Express, and Nx",
  "version": "0.1.10",
  "type": "module",
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": ">=22.20.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev:desktop": "pnpm nx dev desktop",
    "dev:web": "pnpm nx dev web",
    "dev:api": "pnpm nx dev api",
    "build": "pnpm nx run-many --target=build --all",
    "build:desktop": "pnpm nx build desktop",
    "build:web": "pnpm nx build web",
    "build:api": "pnpm nx build api",
    "lint": "pnpm nx run-many --target=lint --all",
    "lint:fix": "pnpm nx run-many --target=lint --all --fix",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "test:affected": "pnpm nx affected --target=test",
    "test:domain-server": "vitest --project=domain-server",
    "test:domain-client": "vitest --project=domain-client",
    "test:api": "vitest --project=api",
    "test:web": "vitest --project=web",
    "test:desktop": "vitest --project=desktop",
    "test:contracts": "vitest --project=contracts",
    "test:ui-lib": "vitest --project=ui",
    "test:utils": "vitest --project=utils",
    "format": "pnpm prettier --write .",
    "format:check": "pnpm prettier --check .",
    "graph": "pnpm nx graph",
    "affected:build": "pnpm nx affected --target=build",
    "affected:test": "pnpm nx affected --target=test",
    "affected:lint": "pnpm nx affected --target=lint",
    "clean": "pnpm nx reset",
    "install:all": "pnpm install"
  },
  "dependencies": {
    "@dailyuse/contracts": "workspace:*",
    "@dailyuse/domain-client": "workspace:*",
    "@dailyuse/domain-server": "workspace:*",
    "@dailyuse/ui": "workspace:*",
    "@dailyuse/utils": "workspace:*",
    "@nestjs/event-emitter": "^3.0.1",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "bmad-method": "4.44.1",
    "cron-parser": "^5.4.0",
    "cronstrue": "^3.3.0",
    "echarts": "^5.6.0",
    "node-schedule": "^2.1.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "vue-echarts": "^7.0.3"
  },
  "devDependencies": {
    "@nestjs/common": "10.0.0",
    "@nestjs/core": "10.0.0",
    "@nx/eslint": "^21.4.1",
    "@nx/js": "^21.4.1",
    "@nx/vite": "^21.4.1",
    "@nx/web": "^21.4.1",
    "@nx/workspace": "^21.4.1",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/vue": "^8.1.0",
    "@types/node": "20.19.9",
    "@types/node-schedule": "^2.1.8",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitest/coverage-v8": "^3.0.5",
    "@vitest/ui": "^3.0.0",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.0.0",
    "eslint-plugin-vue": "^9.33.0",
    "globals": "^16.3.0",
    "happy-dom": "^18.0.1",
    "jiti": "2.4.2",
    "jsdom": "^26.1.0",
    "jsonc-eslint-parser": "^2.1.0",
    "lodash": "4.17.21",
    "nx": "^21.4.1",
    "prettier": "^3.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "sass-embedded": "^1.93.2",
    "tsup": "^8.5.0",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.7",
    "vite-plugin-dts": "~4.5.0",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "overrides": {
      "@electron/rebuild": "^4.0.1"
    },
    "ignoredBuiltDependencies": [
      "@nestjs/core",
      "@parcel/watcher",
      "@prisma/client",
      "@prisma/engines",
      "@scarf/scarf",
      "@swc/core",
      "better-sqlite3",
      "electron-winstaller",
      "esbuild",
      "nx",
      "prisma",
      "vue-demi"
    ]
  }
}
