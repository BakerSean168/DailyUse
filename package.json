{
  "name": "daily-use",
  "private": true,
  "author": {
    "name": "bakersean",
    "email": "lulouhao@stu.sicau.edu.cn"
  },
  "description": "DailyUse",
  "version": "0.1.10",
  "type": "module",
  "scripts": {
    "dev": "nx serve",
    "build": "vue-tsc && nx vite:build && electron-builder",
    "preview": "nx vite:preview",
    "lint": "nx run-many --target=lint --all",
    "format": "prettier --write \"src/**/*.{js,ts,vue}\"",
    "test": "nx run-many --target=test --all",
    "test:ui": "nx test --ui",
    "build:prod": "vue-tsc && nx vite:build",
    "start:prod": "pnpm run build:prod && electron dist-electron/main.js",
    "build:packages": "nx run-many --target=build --projects=contracts,domain-core,domain-server,domain-client,ui,utils",
    "dev:packages": "nx run-many --target=dev --projects=contracts,domain-core,domain-server,domain-client,ui,utils",
    "dev:web": "nx dev web",
    "build:web": "nx build web",
    "preview:web": "nx preview web",
    "dev:api": "nx dev api",
    "build:api": "nx build api",
    "start:api": "nx start api",
    "dev:stack": "pwsh -NoLogo -NoProfile -Command \"Start-Job { nx dev api } | Out-Null; nx dev web\"",
    "graph": "nx graph",
    "affected:build": "nx affected --target=build",
    "affected:test": "nx affected --target=test",
    "affected:lint": "nx affected --target=lint"
  },
  "dependencies": {
    "@dailyuse/contracts": "workspace:*",
    "@dailyuse/domain-client": "workspace:*",
    "@dailyuse/domain-core": "workspace:*",
    "@dailyuse/domain-server": "workspace:*",
    "@dailyuse/ui": "workspace:*",
    "@dailyuse/utils": "workspace:*",
    "@electron/rebuild": "^4.0.1",
    "@types/uuid": "^10.0.0",
    "axios": "^1.9.0",
    "better-sqlite3": "^11.10.0",
    "chokidar": "^4.0.3",
    "date-fns": "^4.1.0",
    "echarts": "^5.6.0",
    "electron-log": "^5.4.2",
    "github-markdown-css": "^5.8.1",
    "markdown-it": "^14.1.0",
    "markdown-it-image-lazy-loading": "^2.0.1",
    "monaco-editor": "^0.52.2",
    "monaco-editor-vue3": "^0.1.10",
    "node-schedule": "^2.1.1",
    "pinia": "^3.0.3",
    "pinia-plugin-persistedstate": "^4.2.0",
    "simple-git": "^3.27.0",
    "uuid": "^11.0.5",
    "vue": "^3.4.21",
    "vue-echarts": "^7.0.3",
    "vue-i18n": "11.0.0-rc.1",
    "vue-router": "4",
    "vuedraggable": "^4.1.0",
    "vuetify": "^3.7.5"
  },
  "devDependencies": {
    "@eslint/css": "^0.10.0",
    "@eslint/js": "^9.32.0",
    "@eslint/markdown": "^7.1.0",
    "@mdi/font": "^7.4.47",
    "@nx/eslint": "21.4.1",
    "@nx/vite": "21.4.1",
    "@nx/web": "21.4.1",
    "@rollup/rollup-win32-x64-msvc": "^4.46.2",
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/markdown-it": "^14.1.2",
    "@types/node-schedule": "^2.1.7",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitest/ui": "^3.2.4",
    "electron": "^30.5.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-vue": "^10.4.0",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "jsdom": "^26.1.0",
    "node-gyp": "^11.2.0",
    "nx": "21.4.1",
    "prebuild-install": "^7.1.3",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.39.0",
    "vite": "^5.4.19",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-plugin-monaco-editor": "^1.1.0",
    "vitest": "^3.2.4",
    "vue-tsc": "^2.1.10"
  },
  "main": "dist-electron/main.js"
}
