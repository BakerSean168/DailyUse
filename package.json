{
  "name": "daily-use",
  "private": true,
  "author": {
    "name": "bakersean",
    "email": "lulouhao@stu.sicau.edu.cn"
  },
  "description": "DailyUse Monorepo - Full-stack productivity suite built with Vue 3, Express, and Nx",
  "version": "0.1.10",
  "type": "module",
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "// ========== Quick Start ==========": "",
    "dev": "nx run-many -t serve --projects=api,web --parallel=2",
    "start": "nx run-many -t serve --projects=api,web --parallel=2",
    "// ========== Development ==========": "",
    "dev:api": "nx serve api",
    "dev:web": "nx serve web",
    "dev:desktop": "nx serve desktop",
    "dev:all": "nx run-many -t serve --projects=api,web,desktop --parallel=3",
    "dev:web:local": "nx serve web --configuration=local",
    "dev:web:staging": "nx serve web --configuration=staging",
    "// ========== Build ==========": "",
    "build": "nx run-many -t build --all",
    "build:api": "nx build api",
    "build:web": "nx build web",
    "build:desktop": "nx build desktop",
    "build:affected": "nx affected -t build",
    "// ========== Type Checking ==========": "",
    "typecheck": "nx run-many -t typecheck --all --parallel=5",
    "typecheck:api": "nx typecheck api",
    "typecheck:web": "nx typecheck web",
    "typecheck:desktop": "nx typecheck desktop",
    "typecheck:affected": "nx affected -t typecheck",
    "// ========== Testing ==========": "",
    "test": "nx run-many -t test --all",
    "test:affected": "nx affected -t test",
    "test:api": "nx test api",
    "test:web": "nx test web",
    "test:ui-core": "nx test ui-core",
    "test:domain-server": "nx test domain-server",
    "test:domain-client": "nx test domain-client",
    "// ========== E2E Testing ==========": "",
    "e2e": "nx e2e web-e2e",
    "e2e:headed": "nx e2e web-e2e --headed",
    "e2e:debug": "nx e2e web-e2e --debug",
    "e2e:ui": "nx e2e web-e2e --ui",
    "// ========== Database (Prisma) ==========": "",
    "prisma:generate": "nx prisma-generate api",
    "prisma:migrate": "nx prisma-migrate api",
    "prisma:studio": "nx prisma-studio api",
    "prisma:seed": "nx prisma-seed api",
    "prisma:reset": "nx prisma-reset api",
    "db:push": "nx prisma-push api",
    "db:seed": "nx prisma-seed api",
    "db:reset": "nx prisma-reset api",
    "// ========== Docker Database ==========": "",
    "docker:dev:up": "docker-compose up -d",
    "docker:dev:down": "docker-compose down",
    "docker:dev:logs": "docker-compose logs -f postgres-dev",
    "docker:dev:reset": "docker-compose down -v && docker-compose up -d",
    "docker:test:up": "docker-compose -f docker-compose.test.yml up -d",
    "docker:test:down": "docker-compose -f docker-compose.test.yml down",
    "docker:test:reset": "docker-compose -f docker-compose.test.yml down -v && docker-compose -f docker-compose.test.yml up -d",
    "// ========== Code Quality ==========": "",
    "lint": "nx run-many -t lint --all --parallel=5",
    "lint:fix": "nx run-many -t lint --all --parallel=5 --fix",
    "lint:affected": "nx affected -t lint",
    "lint:api": "nx lint api",
    "lint:web": "nx lint web",
    "lint:desktop": "nx lint desktop",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "// ========== Nx Utilities ==========": "",
    "graph": "nx graph",
    "affected:build": "nx affected -t build",
    "affected:test": "nx affected -t test",
    "affected:lint": "nx affected -t lint",
    "affected:typecheck": "nx affected -t typecheck",
    "affected": "nx affected",
    "// ========== Maintenance ==========": "",
    "clean": "nx reset",
    "clean:cache": "nx reset",
    "clean:deps": "pnpm -r exec rm -rf node_modules && rm -rf node_modules",
    "clean:dist": "nx run-many -t clean --all",
    "reset": "nx reset && pnpm clean:deps && pnpm install",
    "// ========== Package Management ==========": "",
    "install:all": "pnpm install",
    "update:deps": "pnpm update --latest --recursive",
    "check:deps": "pnpm outdated --recursive"
  },
  "dependencies": {
    "@ai-sdk/openai": "2.0.80",
    "@dailyuse/contracts": "workspace:*",
    "@dailyuse/domain-client": "workspace:*",
    "@dailyuse/domain-server": "workspace:*",
    "@dailyuse/ui-vuetify": "workspace:*",
    "@dailyuse/utils": "workspace:*",
    "@types/multer": "2.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@vueuse/core": "14.1.0",
    "ai": "5.0.110",
    "cron-parser": "^5.4.0",
    "cronstrue": "^3.3.0",
    "dotenv-expand": "12.0.3",
    "echarts": "^6.0.0",
    "ioredis": "5.8.2",
    "mitt": "^3.0.1",
    "multer": "2.0.2",
    "node-cron": "^4.2.1",
    "node-schedule": "^2.1.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "vue-draggable-plus": "0.6.0",
    "vue-echarts": "^8.0.1",
    "zod": "4.1.13"
  },
  "devDependencies": {
    "@nx/eslint": "22.2.0",
    "@nx/js": "22.2.0",
    "@nx/vite": "22.2.0",
    "@nx/web": "22.2.0",
    "@nx/workspace": "22.2.0",
    "@playwright/test": "^1.56.1",
    "@swc-node/register": "~1.11.1",
    "@swc/core": "~1.15.3",
    "@swc/helpers": "~0.5.11",
    "@testing-library/vue": "^8.1.0",
    "@types/node": "22.13.14",
    "@types/node-schedule": "^2.1.8",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vitest/coverage-v8": "4.0.15",
    "@vitest/ui": "4.0.15",
    "@vue/test-utils": "^2.4.6",
    "electron": "39.2.6",
    "eslint": "^9.0.0",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-vue": "^9.33.0",
    "globals": "^16.3.0",
    "happy-dom": "^20.0.11",
    "jiti": "2.4.2",
    "jscpd": "4.0.5",
    "jsdom": "^27.3.0",
    "jsonc-eslint-parser": "^2.1.0",
    "lodash": "4.17.21",
    "nx": "22.2.0",
    "prettier": "^3.0.0",
    "prisma": "^6.19.1",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "sass-embedded": "^1.96.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript-eslint": "^8.39.1",
    "vite": "7.1.3",
    "vite-plugin-dts": "~4.5.0",
    "vitest": "4.0.15",
    "vue-tsc": "3.1.8"
  },
  "pnpm": {
    "overrides": {
      "@types/node": "22.13.14",
      "@electron/rebuild": "^4.0.1",
      "vite": "^7.1.7",
      "jiti": "2.4.2"
    },
    "ignoredBuiltDependencies": [
      "@nestjs/core",
      "@parcel/watcher",
      "@prisma/client",
      "@prisma/engines",
      "@scarf/scarf",
      "@swc/core",
      "better-sqlite3",
      "electron-winstaller",
      "esbuild",
      "nx",
      "prisma",
      "vue-demi"
    ],
    "onlyBuiltDependencies": [
      "electron",
      "msw"
    ]
  }
}
