{
  "name": "daily-use",
  "private": true,
  "author": {
    "name": "bakersean",
    "email": "lulouhao@stu.sicau.edu.cn"
  },
  "description": "DailyUse Monorepo - Full-stack productivity suite built with Vue 3, Express, and Nx",
  "version": "0.1.10",
  "type": "module",
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": "22.20.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "// ========== Quick Start ==========": "",
    "dev": "pnpm dev:all",
    "start": "pnpm dev:all",
    "// ========== Development ==========": "",
    "dev:api": "pnpm --filter @dailyuse/api dev",
    "dev:web": "pnpm --filter @dailyuse/web dev",
    "dev:desktop": "pnpm --filter @dailyuse/desktop dev",
    "dev:all": "pnpm nx run-many --target=dev --projects=api,web --parallel=2",
    "// ========== Build ==========": "",
    "build": "pnpm build:packages && pnpm nx run-many --target=build --projects=api,web,desktop --parallel=3",
    "build:api": "pnpm --filter @dailyuse/api build",
    "build:web": "pnpm --filter @dailyuse/web build",
    "build:desktop": "pnpm --filter @dailyuse/desktop build",
    "build:packages": "pnpm nx run-many --target=build --projects=contracts,domain-server,domain-client,application-server,application-client,infrastructure-server,infrastructure-client,ui-vuetify,ui-vue,ui-core,ui-react,ui-shadcn,utils --parallel=5",
    "build:all": "pnpm build",
    "// ========== Type Checking ==========": "",
    "typecheck": "pnpm nx run-many --target=typecheck --all --parallel=5",
    "typecheck:api": "pnpm --filter @dailyuse/api typecheck",
    "typecheck:web": "pnpm --filter @dailyuse/web typecheck",
    "typecheck:desktop": "pnpm --filter @dailyuse/desktop typecheck",
    "typecheck:packages": "pnpm nx run-many --target=typecheck --projects=contracts,domain-server,domain-client,ui-vuetify,ui-vue,ui-core,utils --parallel=5",
    "// ========== Testing ==========": "",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "test:affected": "pnpm nx affected --target=test",
    "test:api": "pnpm --filter @dailyuse/api test",
    "test:web": "pnpm --filter @dailyuse/web test",
    "test:desktop": "pnpm --filter @dailyuse/desktop test",
    "test:domain-server": "vitest --project=domain-server",
    "test:domain-client": "vitest --project=domain-client",
    "test:contracts": "vitest --project=contracts",
    "test:ui-lib": "vitest --project=ui",
    "test:utils": "vitest --project=utils",
    "test:all": "pnpm test:run",
    "// ========== E2E Testing ==========": "",
    "e2e": "pnpm --filter @dailyuse/web e2e",
    "e2e:headed": "pnpm --filter @dailyuse/web e2e:headed",
    "e2e:debug": "pnpm --filter @dailyuse/web e2e:debug",
    "e2e:ui": "pnpm --filter @dailyuse/web e2e:ui",
    "e2e:auth": "npx playwright test apps/web/e2e/authentication/",
    "e2e:auth:debug": "npx playwright test apps/web/e2e/authentication/auth-login-debug.spec.ts --reporter=list",
    "e2e:auth:flow": "npx playwright test apps/web/e2e/authentication/auth-flow.spec.ts",
    "e2e:account": "npx playwright test apps/web/e2e/account/",
    "test:seed": "pnpm tsx tools/test/seed-test-user.ts",
    "// ========== Database (Prisma) ==========": "",
    "prisma": "pnpm --filter @dailyuse/api prisma",
    "prisma:generate": "pnpm --filter @dailyuse/api prisma:generate",
    "prisma:migrate": "pnpm --filter @dailyuse/api prisma:migrate",
    "prisma:migrate:create": "pnpm --filter @dailyuse/api prisma:migrate:create",
    "prisma:migrate:deploy": "pnpm --filter @dailyuse/api prisma:migrate:deploy",
    "prisma:migrate:reset": "pnpm --filter @dailyuse/api prisma:migrate:reset",
    "prisma:studio": "pnpm --filter @dailyuse/api prisma:studio",
    "prisma:seed": "pnpm --filter @dailyuse/api prisma:seed",
    "prisma:reset": "pnpm --filter @dailyuse/api prisma:reset",
    "prisma:format": "pnpm --filter @dailyuse/api prisma:format",
    "prisma:validate": "pnpm --filter @dailyuse/api prisma:validate",
    "db:push": "pnpm --filter @dailyuse/api db:push",
    "db:seed": "pnpm prisma:seed",
    "db:reset": "pnpm prisma:reset",
    "// ========== Docker Database ==========": "",
    "docker:dev:up": "docker-compose up -d",
    "docker:dev:down": "docker-compose down",
    "docker:dev:logs": "docker-compose logs -f postgres-dev",
    "docker:dev:reset": "docker-compose down -v && docker-compose up -d",
    "docker:test:up": "docker-compose -f docker-compose.test.yml up -d",
    "docker:test:down": "docker-compose -f docker-compose.test.yml down",
    "docker:test:reset": "docker-compose -f docker-compose.test.yml down -v && docker-compose -f docker-compose.test.yml up -d",
    "// ========== Code Quality ==========": "",
    "lint": "pnpm nx run-many --target=lint --all --parallel=5",
    "lint:fix": "pnpm nx run-many --target=lint --all --fix --parallel=5",
    "lint:api": "pnpm --filter @dailyuse/api lint",
    "lint:web": "pnpm --filter @dailyuse/web lint",
    "lint:desktop": "pnpm --filter @dailyuse/desktop lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "// ========== Nx Utilities ==========": "",
    "graph": "pnpm nx graph",
    "affected:build": "pnpm nx affected --target=build",
    "affected:test": "pnpm nx affected --target=test",
    "affected:lint": "pnpm nx affected --target=lint",
    "affected:typecheck": "pnpm nx affected --target=typecheck",
    "clean": "pnpm nx reset && pnpm clean:deps",
    "clean:deps": "pnpm -r exec rm -rf node_modules && rm -rf node_modules",
    "clean:build": "pnpm -r exec rm -rf dist && rm -rf dist",
    "reset": "pnpm clean && pnpm install",
    "// ========== Package Management ==========": "",
    "packages:build": "pnpm build:packages",
    "packages:watch": "pnpm nx run-many --target=watch --projects=contracts,domain-server,domain-client,ui-vuetify,ui-vue,ui-core,utils --parallel=5",
    "packages:dev": "pnpm packages:watch",
    "// ========== Utilities ==========": "",
    "install:all": "pnpm install",
    "update:deps": "pnpm update --latest --recursive",
    "check:deps": "pnpm outdated --recursive"
  },
  "dependencies": {
    "@ai-sdk/openai": "2.0.64",
    "@dailyuse/contracts": "workspace:*",
    "@dailyuse/domain-client": "workspace:*",
    "@dailyuse/domain-server": "workspace:*",
    "@dailyuse/ui-vuetify": "workspace:*",
    "@dailyuse/utils": "workspace:*",
    "@types/node-cron": "^3.0.11",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@vueuse/core": "14.0.0",
    "ai": "5.0.89",
    "cron-parser": "^5.4.0",
    "cronstrue": "^3.3.0",
    "echarts": "^5.6.0",
    "ioredis": "5.8.2",
    "mitt": "^3.0.1",
    "node-cron": "^4.2.1",
    "node-schedule": "^2.1.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "vue-draggable-plus": "0.6.0",
    "vue-echarts": "^7.0.3",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@nx/eslint": "^21.4.1",
    "@nx/js": "^21.4.1",
    "@nx/vite": "^21.4.1",
    "@nx/web": "^21.4.1",
    "@nx/workspace": "^21.4.1",
    "@playwright/test": "^1.56.1",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.15.3",
    "@swc/helpers": "~0.5.11",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/vue": "^8.1.0",
    "@types/node": "22.13.14",
    "@types/node-schedule": "^2.1.8",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "@vue/vue3-jest": "^29.2.6",
    "babel-jest": "^29.7.0",
    "electron": "39.2.6",
    "eslint": "^9.0.0",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-vue": "^9.33.0",
    "globals": "^16.3.0",
    "happy-dom": "^18.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jiti": "2.4.2",
    "jscpd": "4.0.5",
    "jsdom": "^26.1.0",
    "jsonc-eslint-parser": "^2.1.0",
    "lodash": "4.17.21",
    "nx": "^21.4.1",
    "prettier": "^3.0.0",
    "prisma": "^6.17.1",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "sass-embedded": "^1.93.2",
    "ts-jest": "^29.4.5",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.7",
    "vite-plugin-dts": "~4.5.0",
    "vitest": "^3.2.4",
    "vue-tsc": "3.1.8"
  },
  "pnpm": {
    "overrides": {
      "@types/node": "22.13.14",
      "@electron/rebuild": "^4.0.1",
      "vite": "^7.1.7",
      "jiti": "2.4.2"
    },
    "ignoredBuiltDependencies": [
      "@nestjs/core",
      "@parcel/watcher",
      "@prisma/client",
      "@prisma/engines",
      "@scarf/scarf",
      "@swc/core",
      "better-sqlite3",
      "electron-winstaller",
      "esbuild",
      "nx",
      "prisma",
      "vue-demi"
    ],
    "onlyBuiltDependencies": [
      "electron",
      "msw"
    ]
  }
}