{
  "name": "infrastructure-server",
  "root": "packages/infrastructure-server",
  "sourceRoot": "packages/infrastructure-server/src",
  "projectType": "library",
  "tags": ["scope:shared", "type:infrastructure", "platform:server"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "tsup",
        "cwd": "packages/infrastructure-server"
      },
      "dependsOn": ["^build"]
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "packages/infrastructure-server"
      }
    }
  }
}
