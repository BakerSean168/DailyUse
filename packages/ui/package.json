{
  "name": "@dailyuse/ui",
  "version": "0.0.1",
  "description": "Reusable Vue 3 + Vuetify UI components for DailyUse applications",
  "private": false,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./style": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "nx vite:build && vue-tsc --emitDeclarationOnly --outDir dist",
    "dev": "nx serve",
    "type-check": "vue-tsc --noEmit"
  },
  "peerDependencies": {
    "@mdi/font": "^7.0.0",
    "vue": "^3.4.0",
    "vuetify": "^3.7.0"
  },
  "devDependencies": {
    "@rollup/rollup-win32-x64-msvc": "^4.46.2",
    "@vitejs/plugin-vue": "^5.2.4",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vite": "^5.1.6",
    "vue-tsc": "^2.2.0"
  }
}
