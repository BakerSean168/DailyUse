{
  "name": "@dailyuse/domain-server",
  "version": "0.0.1",
  "description": "Server-side domain models with business logic",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm --target es2020 --out-dir dist",
    "dev": "tsup src/index.ts --dts --format esm --target es2020 --watch --out-dir dist",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@dailyuse/domain-core": "workspace:*",
    "@dailyuse/utils": "workspace:*",
    "bcryptjs": "^2.4.3",
    "date-fns": "^4.1.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.6",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4"
  }
}
