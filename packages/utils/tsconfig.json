{
  // 继承基础配置
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    // ============================================================
    // 路径和输出配置
    // ============================================================

    // 基础路径：相对路径的起点
    "baseUrl": ".",

    // 输出目录：编译后的 JavaScript 和类型声明文件
    "outDir": "./dist",

    // 源码根目录：限制编译范围
    "rootDir": "./src",

    // 只生成声明文件，不生成 JS（JS 由 tsup 生成）
    "emitDeclarationOnly": true,

    // ============================================================
    // Composite 项目配置（Monorepo 库的核心）
    // ============================================================

    // 禁用 composite（与 tsup dts 不兼容）
    // tsup 会使用自己的方式生成类型
    "composite": false,

    // 禁用增量编译（与 tsup dts 不兼容）
    "incremental": false,

    // 生成类型声明文件
    "declaration": true,

    // 生成声明文件的 source map（IDE 跳转源码）
    "declarationMap": true,

    // 生成 JavaScript 的 source map（可选，用于调试）
    "sourceMap": true,

    // ============================================================
    // 库环境配置（Utils 包）
    // ============================================================

    // 标准库：ES2020 + DOM（前端工具需要）
    "lib": ["ES2020", "DOM"],

    // 类型定义：包含 Node.js 类型（部分工具可能需要）
    "types": ["node"],

    // ============================================================
    // 本地路径别名配置
    // ============================================================

    // 路径别名：仅用于包内部导入
    "paths": {
      "@/*": ["./src/*"]
    }
  },

  // ============================================================
  // 包含和排除配置
  // ============================================================

  // 包含的文件
  "include": ["src/**/*"],

  // 排除的文件
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"],

  // ============================================================
  // 项目引用配置
  // ============================================================

  // Utils 包依赖 contracts 包
  "references": [
    { "path": "../contracts" }
  ]
}
