{
  "name": "application-server",
  "root": "packages/application-server",
  "sourceRoot": "packages/application-server/src",
  "projectType": "library",
  "tags": ["scope:shared", "type:application", "platform:server"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "tsup",
        "cwd": "packages/application-server"
      },
      "dependsOn": ["^build"]
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{projectRoot}/coverage"],
      "options": {
        "config": "packages/application-server/vitest.config.ts"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "packages/application-server"
      }
    }
  }
}
