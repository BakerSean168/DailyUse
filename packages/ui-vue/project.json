{
  "name": "@dailyuse/ui-vue",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/ui-vue/src",
  "projectType": "library",
  "tags": ["scope:ui", "type:vue"],
  "implicitDependencies": ["@dailyuse/ui-core"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "dependsOn": ["^build"],
      "options": {
        "cwd": "packages/ui-vue",
        "command": "pnpm run build"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/ui-vue",
        "command": "pnpm run typecheck"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/ui-vue",
        "command": "pnpm run dev"
      }
    }
  }
}
