{
  "name": "ui-vue",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/ui-vue/src",
  "tags": ["scope:ui", "type:vue"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/packages/ui-vue/dist"],
      "dependsOn": ["^build"],
      "options": {
        "command": "tsup",
        "cwd": "packages/ui-vue"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsup --watch",
        "cwd": "packages/ui-vue"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/ui-vue/**/*.ts"]
      }
    }
  },
  "implicitDependencies": ["ui-core"]
}
