{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "preserveSymlinks": true,
    "noEmit": false,
    "moduleResolution": "node",  // 确保模块解析正确
    "paths": {
      "@/*": ["./src/*"],
    }
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ],
  "references": [
    {
      "path": "../contracts"
    },
    {
      "path": "../utils"
    }
  ]
}