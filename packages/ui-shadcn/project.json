{
  "name": "ui-shadcn",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/ui-shadcn/src",
  "tags": ["scope:ui", "type:shadcn", "type:react"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/packages/ui-shadcn/dist"],
      "dependsOn": ["^build"],
      "options": {
        "command": "tsup",
        "cwd": "packages/ui-shadcn"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsup --watch",
        "cwd": "packages/ui-shadcn"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/ui-shadcn/**/*.{ts,tsx}"]
      }
    }
  },
  "implicitDependencies": ["ui-react"]
}
