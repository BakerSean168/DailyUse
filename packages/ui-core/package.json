{
  "name": "@dailyuse/ui-core",
  "version": "0.0.1",
  "description": "Framework-agnostic headless UI logic for DailyUse applications",
  "private": false,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "node ../../node_modules/tsup/dist/cli-default.js",
    "dev": "node ../../node_modules/tsup/dist/cli-default.js --watch",
    "type-check": "node ../../node_modules/typescript/lib/tsc.js --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "rimraf": "^6.0.1",
    "tsup": "^8.0.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
