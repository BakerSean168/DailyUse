{
  "name": "@dailyuse/ui-core",
  "version": "0.0.1",
  "description": "Framework-agnostic headless UI logic for DailyUse applications",
  "private": false,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./color-picker": {
      "types": "./dist/color-picker/index.d.ts",
      "import": "./dist/color-picker/index.js"
    },
    "./dialog": {
      "types": "./dist/dialog/index.d.ts",
      "import": "./dist/dialog/index.js"
    },
    "./message": {
      "types": "./dist/message/index.d.ts",
      "import": "./dist/message/index.js"
    },
    "./form": {
      "types": "./dist/form/index.d.ts",
      "import": "./dist/form/index.js"
    },
    "./loading": {
      "types": "./dist/loading/index.d.ts",
      "import": "./dist/loading/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "rimraf": "^6.0.1",
    "tsup": "^8.3.5",
    "typescript": "^5.8.3"
  },
  "keywords": [
    "headless",
    "ui",
    "framework-agnostic",
    "typescript"
  ]
}
